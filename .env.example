# FADJMA Environment Variables Template
# Copy this file to .env and fill in your values

# ======================
# SERVER CONFIGURATION
# ======================
NODE_ENV=development
PORT=5000

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# ======================
# JWT CONFIGURATION
# ======================
# Generate a secure secret: openssl rand -hex 64
JWT_SECRET=your_super_secure_jwt_secret_here_change_in_production

# ======================
# DATABASE CONFIGURATION
# ======================
# For SQLite (recommended for development)
DATABASE_URL=sqlite:./database.sqlite

# For PostgreSQL (production alternative)
# DATABASE_URL=postgresql://username:password@localhost:5432/fadjma_db

# ======================
# HEDERA BLOCKCHAIN CONFIGURATION
# ======================
# Network: testnet or mainnet
HEDERA_NETWORK=testnet

# Your Hedera account details
HEDERA_ACCOUNT_ID=0.0.YOUR_ACCOUNT_ID
HEDERA_PRIVATE_KEY=YOUR_PRIVATE_KEY_HERE

# Topic ID for medical records (create one first)
HEDERA_TOPIC_ID=0.0.YOUR_TOPIC_ID

# Optional: Hedera Mirror Node (for custom endpoints)
# HEDERA_MIRROR_NODE_URL=https://testnet.mirrornode.hedera.com

# ======================
# SECURITY CONFIGURATION
# ======================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Session configuration
SESSION_SECRET=your_session_secret_here

# ======================
# LOGGING CONFIGURATION
# ======================
# Logging level: error, warn, info, debug
LOG_LEVEL=info

# Log file path (optional)
LOG_FILE=./logs/app.log

# ======================
# EMAIL CONFIGURATION (Optional)
# ======================
# For notifications, password resets, etc.
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password
# EMAIL_FROM=noreply@fadjma.com

# ======================
# MONITORING & ANALYTICS (Optional)
# ======================
# For error tracking
# SENTRY_DSN=https://your-sentry-dsn-here

# For application monitoring
# NEW_RELIC_LICENSE_KEY=your_license_key

# ======================
# DEVELOPMENT TOOLS
# ======================
# Debug mode
DEBUG=fadjma:*

# Mock Hedera for testing
MOCK_HEDERA=false

# ======================
# PRODUCTION OVERRIDES
# ======================
# These will be set automatically by hosting providers

# Vercel Frontend URL
# FRONTEND_URL=https://your-app.vercel.app

# Railway/Render Backend
# DATABASE_URL=provided_by_hosting_service
# PORT=provided_by_hosting_service

# ======================
# PLATFORM-SPECIFIC VARIABLES
# ======================

# Railway
# RAILWAY_ENVIRONMENT=production

# Render
# RENDER_SERVICE_ID=provided_by_render

# Vercel
# VERCEL_URL=provided_by_vercel

# Netlify
# NETLIFY_SITE_ID=provided_by_netlify
# Environment
NODE_ENV=development

# Server
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database - PostgreSQL (Production recommended)
USE_POSTGRES=false  # Set to 'true' to use PostgreSQL instead of SQLite
DATABASE_URL=postgresql://user:password@localhost:5432/fadjma_db
# OR manual config:
DB_NAME=fadjma_db
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432
DB_SSL=false

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Hedera Blockchain - EC25519 (Primary Account)
HEDERA_ACCOUNT_ID=0.0.xxxxxx
HEDERA_PRIVATE_KEY=302e020100300506032b657004220420xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
HEDERA_TOPIC_ID=0.0.xxxxxx
HEDERA_NETWORK=testnet

# Hedera ECDSA (Secondary Account)
HEDERA_ECDSA_ACCOUNT_ID=0.0.xxxxxx
HEDERA_ECDSA_PRIVATE_KEY=3030020100300706052b8104000a0422042xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
HEDERA_ECDSA_TOPIC_ID=0.0.xxxxxx

# Verification Mode
# Set to 'true' to use real Hedera Mirror Node verification
# Set to 'false' or leave empty to use 2-minute simulation
USE_MIRROR_NODE=false

# KMS Configuration (RECOMMENDED for production - secure private key storage)
KMS_PROVIDER=env  # Options: 'env' (dev), 'aws', 'gcp', 'vault' (prod)

# AWS KMS (if KMS_PROVIDER=aws)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_KMS_KEY_ID=arn:aws:kms:region:account:key/key-id
HEDERA_PRIVATE_KEY_ENCRYPTED=base64-encrypted-key-here

# GCP KMS (if KMS_PROVIDER=gcp)
GCP_PROJECT_ID=your-project-id
GCP_LOCATION=us-central1
GCP_KEY_RING=your-keyring-name
GCP_CRYPTO_KEY=your-crypto-key-name
GCP_KEY_FILE=/path/to/service-account.json

# HashiCorp Vault (if KMS_PROVIDER=vault)
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=your-vault-token
VAULT_SECRET_PATH=secret/data/hedera

# Redis Cache (Optional - recommended for production)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Monitoring (Optional)
SENTRY_DSN=https://xxx@sentry.io/xxx
PROMETHEUS_PORT=9090

